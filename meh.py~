import os
import urllib
import re
from pygoogle import pygoogle
print "Enter search key word: "
query = raw_input()
g = pygoogle(query)
g.pages = 2
linkFile = open(os.path.join('data', 'linkFile'),'w')
count=0
for url in g.get_urls():
	linkFile.write(url+'\n')
	htmlfile = urllib.urlopen(url)
	htmltext=htmlfile.read()
	target = open(os.path.join('data', query+'_'+str(count)+'.txt' ),'w')
	for para in re.findall('<p>(.*?)</p>', htmltext, re.DOTALL):
		target.write(re.sub("(\<.*?\>)", "",para)+'\n')
	count = count + 1
